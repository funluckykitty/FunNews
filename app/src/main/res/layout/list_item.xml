<?xml version="1.0" encoding="utf-8"?>
   <!-- 7/24/18 - LSB - Learned lots about formatting on the Slack ABND Bulletin Board-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/appImageView"
        android:layout_width="@dimen/webImageSize"
        android:layout_height="@dimen/webImageSize"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/standardPaddingMargin"
        android:paddingLeft="@dimen/standardPaddingMargin"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/webTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/standardPaddingMargin"
            android:paddingTop="@dimen/standardPaddingMargin"
            android:textAllCaps="true"
            tools:text="Blah Blah Blah" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/standardPaddingMargin"
                android:textStyle="italic"
                tools:text="Lori B as Author" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/webPublicationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/standardPaddingMargin"
                tools:text="12/23/2017" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sectionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/standardPaddingMargin"
                tools:text="Crafts" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>